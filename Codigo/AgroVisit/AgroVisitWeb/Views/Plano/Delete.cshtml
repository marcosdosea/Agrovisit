@model AgroVisitWeb.Models.PlanoViewModel

@{
    ViewData["Title"] = "Excluir Plano";
}

<body>
    <div class="card text-center container py-5" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h3>Excluir Plano</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Tem certeza que deseja excluir este plano?</h5>
            <p class="text-muted">Essa ação é irreversível e todos os dados do plano serão removidos.</p>

            <hr />

            <dl class="row mt-3">
                <div class="col-md-6 d-flex">
                    <dt class="me-2">@Html.DisplayNameFor(model => model.Nome):</dt>
                    <dd>@Html.DisplayFor(model => model.Nome)</dd>
                </div>
                <div class="col-md-6 d-flex">
                    <dt class="me-2">@Html.DisplayNameFor(model => model.Valor):</dt>
                    <dd>@Html.DisplayFor(model => model.Valor)</dd>
                </div>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4">
            <div class="d-flex justify-content-center gap-3">
                <a class="btn borda-concluir btn-success borda" asp-action="Index">Não</a>
                <button type="submit" value="Delete borda" class="btn btn-danger ">Sim, excluir</button>
            </div>
        </form>
    </div>
</body>