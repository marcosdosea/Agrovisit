@model AgroVisitWeb.Models.ClienteViewModel

@{
    ViewData["Title"] = "Deletar Clientes";
}

<div class="card text-center container pt-5">
    <div class="card-header">
        <h3>Deletar cliente</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">Tem certeza que deseja realizar esta operação?</h5>
        <div class="text-start">
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Cidade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cidade)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Bairro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bairro)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NumeroCasa)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroCasa)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Rua)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rua)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <div class="form-group row m-4">
                <div class="col-md-4">
                    <a id="border" class="btn btn-success" asp-action="Index">Não</a>
                </div>
                <div class="col-md-2 offset-md-4">
                    <button id="border" type="submit" value="Delete" class="btn border-danger btn-danger">Sim</button>
                </div>
            </div>
        </form>
    </div>
</div>