@model AgroVisitWeb.Models.ClienteViewModel

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="card text-center container py-5" style="max-width: 600px;">
    <div class="card-header bg-danger text-white">
        <h3>Excluir Cliente</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title text-danger">Tem certeza que deseja excluir este cliente?</h5>
        <p class="text-muted">Essa ação é irreversível e todos os dados do cliente serão removidos.</p>

        <hr />

        <dl class="row text-start">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cpf)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cpf)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cidade)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cidade)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Bairro)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Bairro)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumeroCasa)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroCasa)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Rua)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Rua)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefone)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <div class="d-flex justify-content-center gap-3">
                <a class="btn btn-success" asp-action="Index">
                    <i class="fas fa-times"></i> Não
                </a>
                <button type="submit" value="Delete" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Sim, excluir
                </button>
            </div>
        </form>
    </div>
</div>