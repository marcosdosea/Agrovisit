@model AgroVisitWeb.Models.ClienteViewModel

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="container pt-5">
    <div class="row">
        <h1>Cadastrar cliente</h1>
    </div>
    <div class="text-end" style="bottom: 60px; position:relative">
