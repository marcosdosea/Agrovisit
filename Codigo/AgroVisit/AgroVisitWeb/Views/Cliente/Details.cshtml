@model AgroVisitWeb.Models.ClienteViewModel

@{
    ViewData["Title"] = "Detalhes de Cliente";
}

<div class="container pt-5">
    <div class="row mb-4">
        <h1>Detalhes do cliente</h1>
    </div>

    <div class="text-end mb-3">
        <a asp-action="Index">
            <svg position-sticky" xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 58 58" fill="none">
                <g filter="url(#filter0_d_370_6135)">
