@model AgroVisitWeb.Models.ClienteViewModel

@{
    ViewData["Title"] = "Detalhes de Cliente";
}

<h1>Detalhes de cliente</h1>

<div>
    <hr />
    <dl class="row">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bairro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bairro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rua)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rua)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroCasa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroCasa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
</div>

<h2><br>Propriedades</h2>

<div>
    @if (Model.ListaPropriedade != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaPropriedade.First().Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaPropriedade.First().Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaPropriedade.First().Cidade)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaPropriedade)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Cidade)
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Id }) |
    <a asp-action="Index">Voltar</a>
</div>
