@model IEnumerable<AgroVisitWeb.Models.ClienteViewModel>
<link href="~/lib/datatable/css/datatables.min.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Clientes";
}
<div class="container pt-5">
    <div class="row">
        <h1>Clientes</h1>
        <a asp-action="Create">Cadastrar Cliente</a>
    </div>

    <table id="tableCliente" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>

                </th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts {
    <script src="~/lib/datatable/js/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableCliente').DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,
                "lengthMenu": [
                    [5, 10, 20, -1],
                    [5, 10, 20, "Todos"]
                ],
                "ajax": {
                    "url": "/Cliente/GetDataPage",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs": [{
                    "targets": [0],
                    "visible": true,
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [1],
                    "visible": true,
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [2],
                    "visible": true,
                    "searchable": false,
                    "orderable": false

                },
                {
                    "targets": [3],
                    "visible": true,
                    "searchable": true,
                    "orderable": false

                }],
                "columns": [
                    { "data": "nome", "name": "Nome", "autoWidth": true },
                    { "data": "cpf", "name": "Cpf", "autoWidth": true },
                    { "data": "telefone", "name": "Telefone", "autoWidth": true },
                    { "data": "cidade", "name": "Cidade", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) {
                            return '<a class="btn btn-info" href="/Cliente/Edit/' + full.id + '">Editar</a> ' +
                                '<a class="btn btn-info" href="/Cliente/Details/' + full.id + '">Detalhes</a> ' +
                                '<a class="btn btn-danger" href="/Cliente/Delete/' + full.id + '">Excluir</a>';
                        }
                    },
                ],
                language: {
                    url: "lib/datatable/js/pt-br.json",
                }
            });
        });
    </script>
}