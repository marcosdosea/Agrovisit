@model AgroVisitWeb.Models.ClienteViewModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente</h1>

<div>
    <a class="btn borda-concluir offset-11" id="border" asp-action="Index">Voltar</a>
</div>

<hr />
<div class="container p-4">
    <div class="col-md-7">
        <form asp-action="Edit" id="border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-6 m-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control border border-success" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-3 m-2">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control border border-success" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group col-3 m-2">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control border border-success" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group col-7 m-2">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control border border-success" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-6 m-2">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control border border-success" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="form-group col-5 m-2">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control border border-success" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6 m-2">
                    <label asp-for="Rua" class="control-label"></label>
                    <input asp-for="Rua" class="form-control border border-success" />
                    <span asp-validation-for="Rua" class="text-danger"></span>
                </div>
                <div class="form-group col-4 m-2">
                    <label asp-for="NumeroCasa" class="control-label"></label>
                    <input asp-for="NumeroCasa" class="form-control border border-success" />
                    <span asp-validation-for="NumeroCasa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-4 m-2">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control border border-success" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="container p-8">
                <input type="submit" value="Concluir" class="btn btn-primary borda-concluir offset-11" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
