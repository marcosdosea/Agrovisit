@model AgroVisitWeb.Models.VisitaViewModel

@{
    ViewData["Title"] = "Agendar visita";
}

<h1>Agendar visita</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!--label asp-for="Id" class="control-label"></!label>-->
                <input type="hidden" asp-for="Id" class="form-control" />
				<!--<span asp-validation-for="Id" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPropriedade" class="control-label"></label>
                <select asp-for="IdPropriedade" asp-items="@Model.ListaPropriedades" class="form-control"></select>
                <span asp-validation-for="IdPropriedade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Concluir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
