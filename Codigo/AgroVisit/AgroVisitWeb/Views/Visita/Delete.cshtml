@model AgroVisitWeb.Models.VisitaViewModel

@{
    ViewData["Title"] = "Deletar visita";
}
<div class="card text-center">
    <div class="card-header">
        <h3>Deletar visita</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">Tem certeza que deseja realizar esta operação?</h5>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Observacoes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Observacoes)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataHora)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataHora)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IdPropriedade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdPropriedade)
                </dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <div class="form-group row m-4">
                <div class="col-md-4">
                    <a class="btn btn-danger" asp-action="Index">Não</a>
                </div>
                <div class="col-md-2 offset-md-4">
                    <button type="submit" value="Delete" class="btn btn-success">Sim</button>
                </div>
            </div>
        </form>      
    </div>
</div>