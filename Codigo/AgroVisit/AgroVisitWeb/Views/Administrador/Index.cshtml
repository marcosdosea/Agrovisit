@{
    ViewData["Title"] = "Painel do Administrador";
}

<h2>Painel do Administrador</h2>
<div class="container mt-4">
    <div class="alert alert-info" role="alert"> Bem-vindo, administrador! 🎉
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card border-primary mb-3">
            <div class="card-header">Usuários</div>
            <div class="card-body text-primary">
                <h5 class="card-title">Gerenciar Usuários</h5>
                <p class="card-text">Visualize, edite ou remova contas de usuários.</p>
                <a href="#" class="btn btn-primary btn-sm">Acessar</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success mb-3">
            <div class="card-header">Projetos</div>
            <div class="card-body text-success">
                <h5 class="card-title">Acompanhar Projetos</h5>
                <p class="card-text">Visualize os projetos cadastrados e seus responsáveis.</p>
                <a href="/Projeto" class="btn btn-success btn-sm">Acessar</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-warning mb-3">
            <div class="card-header">Relatórios</div>
            <div class="card-body text-warning">
                <h5 class="card-title">Relatórios Gerais</h5>
                <p class="card-text">Exportação de dados e estatísticas do sistema.</p>
                <a href="#" class="btn btn-warning btn-sm">Acessar</a>
            </div>
        </div>
    </div>
</div>
