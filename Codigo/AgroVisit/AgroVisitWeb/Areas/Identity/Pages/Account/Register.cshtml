@page
@model RegisterModel

@{
    ViewData["Title"] = "Cadastro";
}

<div class="container p-5  text-center col-7">
    <div>
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row">
        <div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" autocomplete="on">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control border border-success borda" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger">Email</span>
                </div><br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control border border-success borda" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger">Senha</span>
                </div><br />
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control border border-success borda" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger">Email</span>
                </div><br />
                <button type="submit" class="col-m-6 btn btn-lg btn-primary borda-concluir borda">Cadastrar</button>
            </form>
        </div><br /><br />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
