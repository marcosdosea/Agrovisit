@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}


<div class="container p-5 text-center col-7">
    <h1>@ViewData["Title"]</h1><br />
    <h2>Insira seu Email.</h2>
    <hr />
    <div class="row">
        <div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control border border-success borda" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div><br />
                <button type="submit" class="col-m-6 btn btn-lg btn-primary borda-concluir borda">Alterar Senha</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
