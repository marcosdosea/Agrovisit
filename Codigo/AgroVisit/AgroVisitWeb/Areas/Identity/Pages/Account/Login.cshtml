@page
@model LoginModel

@{
    ViewData["Title"] = "AgroVisit";
}

<div class="container p-5 text-center col-7">
    <div>
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row">
        <div>
            <section>
                <form id="account" method="post" autocomplete="on">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control border border-success borda" style="border: 50px solid;" autocomplete="email" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div><br />

                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control border border-success borda" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div>
                        <div class="checkbox text-end">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="col-m-6 btn btn-lg btn-primary borda-concluir borda">Entrar</button>
                    </div><br />
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar-se</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
